 .mod-post
    overflow: hidden
    background: #fff
    margin-bottom: 10px
    box-sizing: border-box
    // float: left
    display: inline-block;
    vertical-align: top
    text-align: left
    // width: 280px
    // height: 204px
    width: 23%
    margin: 0 1% 10px
    transition: box-shadow .2s
    &:hover
      box-shadow: 0 0 2px rgba(0,0,0,.2)
      .mod-post-desc, .mod-post-date
        color: #646464
    & > a
      display: block

    &-cover
      position:relative
      display: block
      width: 100%
      height: 0
      padding-top: (667/375*100%)
      overflow: hidden
      background-position: 50% 0
      background-repeat: no-repeat
      background-size: cover
      & img
        display: block
        width: 100%
        position: absolute
        top: 0;
        left: 0;
      & .mod-post-qrcode
        position: absolute
        left: 0
        right: 0
        top: 0
        bottom: 0
        background: rgba(0,0,0, .5)
        transition: all .3s
        visibility: hidden
        opacity: 0
        .mod-post:hover & {
          visibility: visible
          opacity: 1
        }
        img {
          max-width: 80%
          position: absolute
          top: 0
          right: 0
          bottom: 0
          left: 0
          margin: auto
        }
    &-info
      padding: 15px 10px 10px

    &-tit
      height: 24px
      margin-bottom: 10px
      overflow: hidden
      line-height: 24px
      font-weight: 400
      white-space: nowrap
      text-overflow: ellipsis
      transition: color 200ms
      font-size: 19.2px
      +mobile() {
         // font-size: 16px
      }

    &-desc
      height: 40px
      line-height: 20px
      overflow: hidden
      text-overflow: ellipsis
      display: -webkit-box
      -webkit-line-clamp: 2
      -webkit-box-orient: vertical
      word-wrap: break-word
      transition: color 200ms
      font-size: 16px

    &-date
      font-size: 16px

    +mobile() {
        width: 46%
        margin: 2%;

        // box-shadow: 0 1px 2px rgba(0,0,0,0.1);
        &-cover {
          height: auto
        }

    }
