.posts
  text-align: center
  font-size: 0
  margin: 0 -1%

  @media (max-width: 768px) {
    & {
      margin: 0
      padding: 0 16px
    }
  }
  &:after
    content: ' '
    clear: both
    display: table
  +mobile() {
    margin: 0
  }
